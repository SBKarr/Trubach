mixin breadcrumbs
	.breadcrumbs
		p.breadcrumbs
			each br, idx in breadcrumbs
				if idx == 0
					a.breadcrumbs(href=br.link)= br.title
				else
					span= " > "
					a.breadcrumbs(href=br.link)= br.title

